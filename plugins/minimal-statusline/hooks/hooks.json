{
  "description": "Prompt setup guide on session start if statusline is not configured",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/check-statusline.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
